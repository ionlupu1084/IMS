@page "/"


@inject IViewInventoriesByNameUseCase ViewInventoriesByNameUseCase
@inject IEditInventoryUseCase EditInventoryUseCase
@inject IDeleteInventoryUseCase DeleteInventoryUseCase
<PageTitle>Test Page</PageTitle>

<br />
<br />
<ul> 
        @if (inventories is not null && inventories.Count > 0)
        {
            foreach (var inv in inventories)
            {
                <li>
                    @inv.InventoryName;
                </li>
            }
        }
</ul>
@code{
    private List<Inventory>? inventories;
    protected override async Task OnInitializedAsync()
    {
        // Test edit inventory
        var inventory1 = new Inventory { InventoryID = 1, InventoryName = "Byke Seat", Quantity = 50, Price = 3 };
        await EditInventoryUseCase.ExecuteAsync(inventory1);
        // Test delete 
        //await DeleteInventoryUseCase.ExecuteAsync(inventory1);

        inventories=(await ViewInventoriesByNameUseCase.ExecuteAsync()).ToList();
    }
}